{
    "name": "MicroCoin/MicroCoin",
    "description": "MicroCoin PHP Client SDK",
    "keywords": [
        "microcoin",
        "php",
        "sdk",
        "api"
    ],
    "homepage": "https://microcoin.hu",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Peter Nemeth",
            "homepage": "https://microcoin.hu",
            "email": "pethical@microcoin.hu",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2",
        "simplito/elliptic-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "~2.6",
        "friendsofphp/php-cs-fixer": "~1.12"
    },
    "autoload": {
        "psr-4": { "MicroCoin\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "MicroCoin\\" : "test/" }
    },
    "archive": {
        "exclude": ["/img", "/examples"]
    }

}
